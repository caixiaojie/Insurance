<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_act_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.clkj.insurance.activities.comRegister.ActRegister">

    <include layout="@layout/normal_toolbar"></include>
    <EditText
        android:id="@+id/act_register_phone"
        android:layout_width="match_parent"
        android:layout_height="98px"
        android:hint="请输入11位手机号"
        android:textColor="#b3b3b3"
        android:textColorHint="#b3b3b3"
        android:textSize="28px"
        android:background="@null"
        android:gravity="center_vertical"
        android:paddingLeft="30px"
        android:maxLength="11"
        android:inputType="phone"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#eaeaea"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="98px"
        android:gravity="center_vertical"
        android:paddingLeft="30px"
        android:paddingRight="30px"
        >
        <EditText
            android:id="@+id/code_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入验证码"
            android:textColor="#b3b3b3"
            android:textSize="28px"
            android:textColorHint="#b3b3b3"
            android:inputType="phone"
            />
        <TextView
            android:id="@+id/send_code"
            android:layout_width="200px"
            android:layout_height="62px"
            android:textColor="#f3c98a"
            android:textSize="28px"
            android:text="发送验证码"
            android:background="@drawable/register_code_bg"
            android:gravity="center"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#eaeaea"
        />
    <EditText
        android:id="@+id/act_register_password"
        android:layout_width="match_parent"
        android:layout_height="98px"
        android:hint="请输入6-12位密码"
        android:background="@null"
        android:textColor="#b3b3b3"
        android:textSize="28px"
        android:textColorHint="#b3b3b3"
        android:maxLength="12"
        android:paddingLeft="30px"
        android:inputType="textPassword"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#eaeaea"
        />
    <EditText
        android:id="@+id/act_register_password_again"
        android:layout_width="match_parent"
        android:layout_height="98px"
        android:hint="请再次输入密码"
        android:background="@null"
        android:textColor="#b3b3b3"
        android:textSize="28px"
        android:textColorHint="#b3b3b3"
        android:maxLength="12"
        android:paddingLeft="30px"
        android:inputType="textPassword"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#eaeaea"
        />
    <com.rey.material.widget.TextView
        android:id="@+id/act_register_next"
        android:layout_width="580px"
        android:layout_height="80px"
        android:text="下一步"
        android:textColor="#ffffff"
        android:textSize="34px"
        android:background="@drawable/order_bg"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:layout_marginTop="50px"
        />
</LinearLayout>
