<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.clkj.insurance.fragment.FragEmergency">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="30px"
                >
                <TextView
                    android:id="@+id/act_report_second_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#9a9a9a"
                    android:textSize="28px"
                    android:text="死猪头数:"
                    />
                <EditText
                    android:id="@+id/act_report_second_hint"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#626262"
                    android:textSize="28px"
                    android:hint="请输入死猪头数"
                    android:layout_marginLeft="20px"
                    android:background="@null"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#e4e4e4"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="30px"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#9a9a9a"
                    android:textSize="28px"
                    android:text="视频要求:"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#626262"
                    android:textSize="28px"
                    android:text="视频一段(含车牌号、含所有死猪)"
                    android:layout_marginLeft="20px"
                    android:background="@null"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="30px"
                android:paddingBottom="20px"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#9a9a9a"
                    android:textSize="28px"
                    android:text="报案类型:"
                    android:visibility="invisible"
                    />
                <FrameLayout
                    android:id="@+id/act_start_update_video"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20px"
                    >
                    <ImageView
                        android:layout_width="130px"
                        android:layout_height="130px"
                        android:src="@mipmap/qy_2"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#9a9a9a"
                        android:textSize="26px"
                        android:text="上传视频"
                        android:layout_gravity="center"
                        android:layout_marginTop="35px"
                        />
                </FrameLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#e4e4e4"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="30px"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#9a9a9a"
                    android:textSize="28px"
                    android:text="照片要求:"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#626262"
                    android:textSize="28px"
                    android:text="正面车牌号照片一张,死猪在车厢上的照片一张"
                    android:layout_marginLeft="20px"
                    android:background="@null"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="30px"
                android:paddingBottom="20px"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#9a9a9a"
                    android:textSize="28px"
                    android:text="报案类型:"
                    android:visibility="invisible"
                    />

                <android.support.v7.widget.RecyclerView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/act_report_photo_recycler"
                    android:visibility="visible"
                    android:layout_marginLeft="20px"
                    />
                <!--<FrameLayout
                    android:id="@+id/act_start_update_photo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20px"
                    >
                    <ImageView
                        android:layout_width="130px"
                        android:layout_height="130px"
                        android:src="@mipmap/qy_2"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#9a9a9a"
                        android:textSize="22px"
                        android:text="上传照片"
                        android:layout_gravity="center"
                        android:layout_marginTop="35px"
                        />
                </FrameLayout>-->
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="30px"
                android:paddingBottom="30px"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#9a9a9a"
                    android:textSize="28px"
                    android:text="照片要求:"
                    android:visibility="invisible"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#ff9900"
                    android:textSize="28px"
                    android:text="后期可补传相关证明"
                    android:layout_marginLeft="20px"
                    android:background="@null"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#e4e4e4"
                />

            <com.rey.material.widget.TextView
                android:layout_width="580px"
                android:layout_height="74px"
                android:text="确认报案"
                android:background="@drawable/sure_start_bg"
                android:gravity="center"
                android:layout_marginTop="20px"
                android:layout_gravity="center_horizontal"
                android:textSize="30px"
                android:textColor="#efeded"
                app:rd_enable="true"
                android:visibility="gone"
                />
            <com.rey.material.widget.TextView
                android:id="@+id/sure_report"
                android:layout_width="580px"
                android:layout_height="74px"
                android:text="确认报案"
                android:background="@drawable/order_bg"
                android:gravity="center"
                android:layout_marginTop="20px"
                android:layout_gravity="center_horizontal"
                android:textSize="30px"
                android:textColor="#efeded"
                app:rd_enable="true"
                android:visibility="visible"
                />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>


</LinearLayout>
