<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.clkj.insurance.fragment.FragTrafficAccident">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="30px"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#9a9a9a"
                    android:textSize="28px"
                    android:text="本车车牌:"
                    />
                <ImageView
                    android:layout_width="130px"
                    android:layout_height="130px"
                    android:src="@mipmap/jz_1"
                    android:layout_marginLeft="20px"
                    />
                <FrameLayout
                    android:id="@+id/frag_traffic_update_car_photo_after"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_marginLeft="20px"
                    >
                    <ImageView
                        android:id="@+id/car_photo"
                        android:layout_width="130px"
                        android:layout_height="130px"
                        android:src="@mipmap/jz_1"
                        android:scaleType="centerCrop"
                        />
                    <ImageView
                        android:id="@+id/car_photo_reduce_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/jz_2"
                        android:layout_gravity="right"
                        android:layout_marginTop="10px"
                        android:layout_marginRight="10px"
                        />
                </FrameLayout>
                <FrameLayout
                    android:id="@+id/frag_traffic_update_car_photo_before"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20px"
                    >
                    <ImageView
                        android:layout_width="130px"
                        android:layout_height="130px"
                        android:src="@mipmap/qy_2"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#9a9a9a"
                        android:textSize="26px"
                        android:text="上传照片"
                        android:layout_gravity="center"
                        android:layout_marginTop="35px"
                        />
                </FrameLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#e4e4e4"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="30px"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#9a9a9a"
                    android:textSize="28px"
                    android:text="本车车辆全景:"
                    />
                <ImageView
                    android:layout_width="130px"
                    android:layout_height="130px"
                    android:src="@mipmap/jt_3"
                    android:layout_marginLeft="20px"
                    />
                <FrameLayout
                    android:id="@+id/frag_traffic_update_car_photo1_after"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_marginLeft="20px"
                    >
                    <ImageView
                        android:id="@+id/car_photo1"
                        android:layout_width="130px"
                        android:layout_height="130px"
                        android:src="@mipmap/jz_1"
                        android:scaleType="centerCrop"
                        />
                    <ImageView
                        android:id="@+id/car_photo1_reduce_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/jz_2"
                        android:layout_gravity="right"
                        android:layout_marginTop="10px"
                        android:layout_marginRight="10px"
                        />
                </FrameLayout>
                <FrameLayout
                    android:id="@+id/frag_traffic_update_car_photo1_before"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20px"
                    >
                    <ImageView
                        android:layout_width="130px"
                        android:layout_height="130px"
                        android:src="@mipmap/qy_2"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#9a9a9a"
                        android:textSize="26px"
                        android:text="上传照片"
                        android:layout_gravity="center"
                        android:layout_marginTop="35px"
                        />
                </FrameLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#e4e4e4"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="30px"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#9a9a9a"
                    android:textSize="28px"
                    android:text="受损部位近照:"
                    />
                <ImageView
                    android:layout_width="130px"
                    android:layout_height="130px"
                    android:src="@mipmap/jt_2"
                    android:layout_marginLeft="20px"
                    />
                <FrameLayout
                    android:id="@+id/frag_traffic_update_shousun_photo_after"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_marginLeft="20px"
                    >
                    <ImageView
                        android:id="@+id/shousun_photo"
                        android:layout_width="130px"
                        android:layout_height="130px"
                        android:src="@mipmap/jz_1"
                        android:scaleType="centerCrop"
                        />
                    <ImageView
                        android:id="@+id/shousun_photo_reduce_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/jz_2"
                        android:layout_gravity="right"
                        android:layout_marginTop="10px"
                        android:layout_marginRight="10px"
                        />
                </FrameLayout>
                <FrameLayout
                    android:id="@+id/frag_traffic_update_shousun_photo_before"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20px"
                    >
                    <ImageView
                        android:layout_width="130px"
                        android:layout_height="130px"
                        android:src="@mipmap/qy_2"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#9a9a9a"
                        android:textSize="26px"
                        android:text="上传照片"
                        android:layout_gravity="center"
                        android:layout_marginTop="35px"
                        />
                </FrameLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#e4e4e4"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="30px"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#9a9a9a"
                    android:textSize="28px"
                    android:text="事故现场全景:"
                    />
                <ImageView
                    android:layout_width="130px"
                    android:layout_height="130px"
                    android:src="@mipmap/jt_1"
                    android:layout_marginLeft="20px"
                    />
                <FrameLayout
                    android:id="@+id/frag_traffic_update_shigu_photo_after"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_marginLeft="20px"
                    >
                    <ImageView
                        android:id="@+id/shigu_photo"
                        android:layout_width="130px"
                        android:layout_height="130px"
                        android:src="@mipmap/jz_1"
                        android:scaleType="centerCrop"
                        />
                    <ImageView
                        android:id="@+id/shigu_photo_reduce_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/jz_2"
                        android:layout_gravity="right"
                        android:layout_marginTop="10px"
                        android:layout_marginRight="10px"
                        />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/frag_traffic_update_shigu_photo_before"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20px"
                    >
                    <ImageView
                        android:layout_width="130px"
                        android:layout_height="130px"
                        android:src="@mipmap/qy_2"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#9a9a9a"
                        android:textSize="26px"
                        android:text="上传照片"
                        android:layout_gravity="center"
                        android:layout_marginTop="35px"
                        />
                </FrameLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#e4e4e4"
                />
            <com.rey.material.widget.TextView
                android:id="@+id/frag_traffic_sure"
                android:layout_width="580px"
                android:layout_height="74px"
                android:text="确认报案"
                android:background="@drawable/sure_start_bg"
                android:gravity="center"
                android:layout_marginTop="20px"
                android:layout_gravity="center_horizontal"
                android:textSize="30px"
                android:textColor="#efeded"
                app:rd_enable="true"
                android:visibility="visible"
                />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>
