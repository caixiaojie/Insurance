<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.clkj.insurance.fragment.FragMessage">
    <include layout="@layout/normal_toolbar"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="74px"
        android:gravity="center_vertical"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            >
            <TextView
                android:id="@+id/frag_message_system_message"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="系统消息"
                android:textSize="28px"
                android:textColor="#292929"
                android:gravity="center_vertical"
                />
            <TextView
                android:id="@+id/frag_message_system_message_num"
                android:layout_width="18px"
                android:layout_height="18px"
                android:text="2"
                android:textSize="13px"
                android:textColor="#ffffff"
                android:background="@drawable/shape_frag_home_news_point"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="10px"
                />
        </LinearLayout>
        <View
            android:layout_width="1px"
            android:layout_height="24px"
            android:background="#e3e3e3"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            >
            <TextView
                android:id="@+id/frag_message_case_handling_advice"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="案件处理意见"
                android:textSize="28px"
                android:textColor="#292929"
                android:gravity="center_vertical"
                />
            <TextView
                android:id="@+id/frag_message_system_anjian_num"
                android:layout_width="18px"
                android:layout_height="18px"
                android:text="2"
                android:textSize="13px"
                android:textColor="#ffffff"
                android:background="@drawable/shape_frag_home_news_point"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="10px"
                />
        </LinearLayout>
       <!-- <TextView

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="#575757"
            android:textSize="28px"

            android:gravity="center"
            />-->
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/content1"
        />

</LinearLayout>
