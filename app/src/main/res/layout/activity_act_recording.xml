<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_act_recording"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.clkj.insurance.activities.comRecording.ActRecording">

    <include layout="@layout/normal_toolbar"></include>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="30px"
        android:paddingRight="30px"
        android:paddingBottom="20px"
        android:paddingTop="20px"
        android:gravity="center_vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#9a9a9a"
            android:textSize="28px"
            android:text="选择标签:"
            />
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <RadioButton
                android:id="@+id/rb_flush"
                android:layout_width="104px"
                android:layout_height="52px"
                android:text="冲水"
                android:textSize="28px"
                android:textColor="@drawable/recording_rb_text_selector"
                android:gravity="center"
                android:background="@drawable/recording_rb_selector"
                android:layout_marginLeft="20px"
                android:button="@null"
                />
            <RadioButton
                android:id="@+id/rb_traffic_jam"
                android:layout_width="104px"
                android:layout_height="52px"
                android:text="堵车"
                android:textSize="28px"
                android:textColor="@drawable/recording_rb_text_selector"
                android:gravity="center"
                android:background="@drawable/recording_rb_selector"
                android:layout_marginLeft="10px"
                android:button="@null"
                />
            <RadioButton
                android:id="@+id/rb_scale"
                android:layout_width="104px"
                android:layout_height="52px"
                android:text="过秤"
                android:textSize="28px"
                android:textColor="@drawable/recording_rb_text_selector"
                android:gravity="center"
                android:background="@drawable/recording_rb_selector"
                android:layout_marginLeft="10px"
                android:button="@null"
                android:checked="true"
                />
            <RadioButton
                android:id="@+id/rb_toll"
                android:layout_width="114px"
                android:layout_height="52px"
                android:text="收费站"
                android:textSize="28px"
                android:textColor="@drawable/recording_rb_text_selector"
                android:gravity="center"
                android:background="@drawable/recording_rb_selector"
                android:layout_marginLeft="10px"
                android:button="@null"
                />
        </RadioGroup>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#e4e4e4"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="30px"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#9a9a9a"
            android:textSize="28px"
            android:text="照片要求:"
            />
        <TextView
            android:id="@+id/request_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#626262"
            android:textSize="28px"
            android:text="称重重量清晰可见照片一张"
            android:layout_marginLeft="20px"
            android:background="@null"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="30px"
        android:paddingBottom="20px"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#9a9a9a"
            android:textSize="28px"
            android:text="报案类型:"
            android:visibility="invisible"
            />
        <!--<FrameLayout
            android:id="@+id/act_start_update_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            >
            <ImageView
                android:layout_width="130px"
                android:layout_height="130px"
                android:src="@mipmap/qy_2"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#9a9a9a"
                android:textSize="26px"
                android:text="上传照片"
                android:layout_gravity="center"
                android:layout_marginTop="35px"
                />
        </FrameLayout>-->
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:id="@+id/act_recording_recycler"
            />
    </LinearLayout>
    <com.rey.material.widget.TextView
        android:id="@+id/actrecording_sure"
        android:layout_width="580px"
        android:layout_height="74px"
        android:text="确认记录"
        android:background="@drawable/sure_start_bg"
        android:gravity="center"
        android:layout_marginTop="20px"
        android:layout_gravity="center_horizontal"
        android:textSize="30px"
        android:textColor="#efeded"
        app:rd_enable="true"
        />
</LinearLayout>
