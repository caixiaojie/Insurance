<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_act_register_next"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.clkj.insurance.activities.comRegister.ActRegisterNext">
    <include layout="@layout/normal_toolbar"></include>
    <EditText
        android:id="@+id/act_register_next_name"
        android:layout_width="match_parent"
        android:layout_height="98px"
        android:hint="请输入姓名"
        android:textColor="#b3b3b3"
        android:textColorHint="#b3b3b3"
        android:textSize="28px"
        android:background="@null"
        android:gravity="center_vertical"
        android:paddingLeft="30px"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#eaeaea"
        />
    <LinearLayout
        android:id="@+id/selected_address_layout"
        android:layout_width="match_parent"
        android:layout_height="98px"
        android:paddingLeft="30px"
        android:paddingRight="30px"
        android:gravity="center_vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="98px"
            android:text="请选择所在地区"
            android:textColor="#b3b3b3"
            android:textSize="28px"
            android:gravity="center_vertical"
            android:layout_weight="1"
            />
        <ImageView
            android:layout_width="18px"
            android:layout_height="18px"
            android:src="@mipmap/zc_1"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#eaeaea"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="98px"
        android:paddingLeft="30px"
        android:paddingRight="30px"
        android:gravity="center_vertical"
        >
        <TextView
            android:id="@+id/act_register_next_address_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#b3b3b3"
            android:textSize="28px"
            android:text="渝"
            />
        <ImageView
            android:id="@+id/select_address_img"
            android:layout_width="18px"
            android:layout_height="18px"
            android:src="@mipmap/zc_1"
            android:layout_marginLeft="15px"
            />
        <View
            android:id="@+id/address_view_line"
            android:layout_width="1px"
            android:layout_height="29px"
            android:background="#e1e1e1"
            android:layout_marginLeft="25px"
            android:layout_marginRight="25px"
            />
        <EditText
            android:id="@+id/act_register_next_licensePaltes"
            android:layout_width="match_parent"
            android:layout_height="98px"
            android:hint="请输入车牌号"
            android:textColor="#b3b3b3"
            android:textColorHint="#b3b3b3"
            android:textSize="28px"
            android:background="@null"
            android:gravity="center_vertical"
            android:maxLength="6"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#eaeaea"
        />
    <com.rey.material.widget.TextView
        android:id="@+id/act_register"
        android:layout_width="580px"
        android:layout_height="80px"
        android:text="立即注册"
        android:textColor="#ffffff"
        android:textSize="34px"
        android:background="@drawable/order_bg"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:layout_marginTop="50px"
        />
</LinearLayout>
