<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.clkj.insurance.fragment.FragMine">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="180px"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="121px"
            android:background="@mipmap/wd_1"
            >
            <TextView
                android:id="@+id/exit_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="退出登录"
                android:textSize="18sp"
                android:textColor="#ffffff"
                android:gravity="right"
                android:layout_marginTop="30px"
                android:layout_marginRight="30px"
                />
        </LinearLayout>
        <com.lf.tempcore.tempViews.TempRoundImage
            android:id="@+id/user_head_img"
            android:layout_width="101px"
            android:layout_height="101px"
            android:src="@mipmap/wd_2"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginTop="24px"
            />
    </FrameLayout>
    <TextView
        android:id="@+id/user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="谢晓国"
        android:textSize="28px"
        android:textColor="#494949"
        android:gravity="center"
        android:layout_marginTop="24px"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#e4e4e4"
        android:layout_marginTop="24px"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="30px"
        android:gravity="center_vertical"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="所属地区:"
                    android:textColor="#8b8b8b"
                    android:textSize="24px"
                    />
                <TextView
                    android:id="@+id/frag_mine_district_belong_to"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="重庆市巴南区"
                    android:textColor="#8b8b8b"
                    android:textSize="24px"
                    android:layout_marginLeft="10px"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24px"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="注册时间:"
                    android:textColor="#8b8b8b"
                    android:textSize="24px"
                    />
                <TextView
                    android:id="@+id/frag_mine_register_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="2417-06-05 12:11"
                    android:textColor="#8b8b8b"
                    android:textSize="24px"
                    android:layout_marginLeft="10px"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="电话号码:"
                    android:textColor="#8b8b8b"
                    android:textSize="24px"
                    />
                <TextView
                    android:id="@+id/frag_mine_tel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="13287859084"
                    android:textColor="#8b8b8b"
                    android:textSize="24px"
                    android:layout_marginLeft="10px"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24px"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="车牌号:"
                    android:textColor="#8b8b8b"
                    android:textSize="24px"
                    />
                <TextView
                    android:id="@+id/frag_mine_number_plate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="渝A123456"
                    android:textColor="#8b8b8b"
                    android:textSize="24px"
                    android:layout_marginLeft="10px"
                    />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="15px"
        android:background="#f3f3f3"
        />
    <LinearLayout
        android:id="@+id/frag_mine_change_password"
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:paddingLeft="30px"
        android:paddingRight="30px"
        android:gravity="center_vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="28px"
            android:textColor="#606060"
            android:text="修改密码"
            />
        <ImageView
            android:layout_width="23px"
            android:layout_height="23px"
            android:src="@mipmap/wd_3"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#e4e4e4"
        />
    <LinearLayout
        android:id="@+id/frag_mine_information_authentication"
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:paddingLeft="30px"
        android:paddingRight="30px"
        android:gravity="center_vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="28px"
            android:textColor="#606060"
            android:text="认证信息"
            />
        <TextView
            android:id="@+id/frag_mine_no_verified"
            android:layout_width="85px"
            android:layout_height="30px"
            android:text="未认证"
            android:textColor="#ffffff"
            android:textSize="26px"
            android:gravity="center"
            android:background="#f85d59"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/frag_mine_verified"
            android:layout_width="85px"
            android:layout_height="30px"
            android:text="已认证"
            android:textColor="#ffffff"
            android:textSize="26px"
            android:gravity="center"
            android:background="#ff9900"
            android:visibility="gone"
            />
        <ImageView
            android:layout_width="23px"
            android:layout_height="23px"
            android:src="@mipmap/wd_3"
            android:layout_marginLeft="10px"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#e4e4e4"
        />

</LinearLayout>
