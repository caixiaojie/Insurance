<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_act_complementary"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.clkj.insurance.activities.comComplementary.ActComplementary">

    <include layout="@layout/normal_toolbar"></include>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="30px"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#9a9a9a"
            android:textSize="28px"
            android:text="照片要求:"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#616161"
            android:textSize="28px"
            android:text="相关证明照片请拍正面,并清晰可见"
            android:layout_marginLeft="15px"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="30px"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#9a9a9a"
            android:textSize="28px"
            android:text="照片要求:"
            android:visibility="invisible"
            />
        <!--<FrameLayout
            android:id="@+id/act_complementary_update_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15px"
            >
            <ImageView
                android:layout_width="130px"
                android:layout_height="130px"
                android:src="@mipmap/qy_2"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#9a9a9a"
                android:textSize="26px"
                android:text="上传照片"
                android:layout_gravity="center"
                android:layout_marginTop="35px"
                />
        </FrameLayout>-->
        <android.support.v7.widget.RecyclerView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/act_complementary_recycler"
            android:layout_marginLeft="15px"
            />
    </LinearLayout>
    <com.rey.material.widget.TextView
        android:id="@+id/act_complementary_sure"
        android:layout_width="580px"
        android:layout_height="74px"
        android:text="确认补传"
        android:background="@drawable/sure_start_bg"
        android:gravity="center"
        android:layout_marginTop="60px"
        android:layout_gravity="center_horizontal"
        android:textSize="30px"
        android:textColor="#efeded"
        app:rd_enable="true"
        />
</LinearLayout>
