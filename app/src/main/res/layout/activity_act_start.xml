<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_act_start"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.clkj.insurance.activities.ActStart">
    <include layout="@layout/normal_toolbar"></include>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="30px"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="装载生猪:"
            android:textColor="#9a9a9a"
            android:textSize="28px"
            />
        <EditText
            android:id="@+id/act_start_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入装载生猪头数"
            android:background="@null"
            android:textColor="#626262"
            android:textColorHint="#626262"
            android:textSize="28px"
            android:layout_marginLeft="20px"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#eaeaea"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="30px"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="照片要求:"
            android:textColor="#9a9a9a"
            android:textSize="28px"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="正面近景车牌号一张"
            android:textColor="#626262"
            android:textSize="28px"
            android:layout_marginLeft="20px"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="30px"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="照片要求:"
            android:textColor="#9a9a9a"
            android:textSize="28px"
            android:visibility="invisible"
            />
        <FrameLayout
            android:id="@+id/act_start_update_phone_after"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            >
            <ImageView
                android:id="@+id/start_photo"
                android:layout_width="130px"
                android:layout_height="130px"
                android:src="@mipmap/jz_1"
                android:scaleType="centerCrop"
                />
            <ImageView
                android:id="@+id/reduce_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/jz_2"
                android:layout_gravity="right"
                android:layout_marginTop="10px"
                android:layout_marginRight="10px"
                />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/act_start_update_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            >
            <ImageView
                android:layout_width="130px"
                android:layout_height="130px"
                android:src="@mipmap/qy_2"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#9a9a9a"
                android:textSize="22px"
                android:text="上传照片"
                android:layout_gravity="center"
                android:layout_marginTop="35px"
                />
        </FrameLayout>
    </LinearLayout>


    <com.rey.material.widget.TextView
        android:id="@+id/act_start_sure"
        android:layout_width="580px"
        android:layout_height="74px"
        android:text="确认起运"
        android:background="@drawable/sure_start_bg"
        android:gravity="center"
        android:layout_marginTop="40px"
        android:layout_gravity="center_horizontal"
        android:textSize="30px"
        android:textColor="#efeded"
        app:rd_enable="true"
        />

</LinearLayout>
