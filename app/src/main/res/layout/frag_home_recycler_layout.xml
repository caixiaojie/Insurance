<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="30px"
    android:gravity="center_vertical"
    >
    <ImageView
        android:layout_width="24px"
        android:layout_height="24px"
        android:src="@mipmap/tb_1"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="28px"
        android:text="运单号:"
        android:textColor="#777777"
        android:layout_marginLeft="20px"
        />
    <TextView
        android:id="@+id/frag_home_recycler_waybill_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="28px"
        android:text="YCEG204454231456755421"
        android:textColor="#777777"
        android:layout_marginLeft="20px"
        />
</LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#eaeaea"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="30px"
        android:gravity="center_vertical"
        >
        <ImageView
            android:layout_width="24px"
            android:layout_height="24px"
            android:src="@mipmap/tb_2"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="28px"
            android:text="起运地:"
            android:textColor="#777777"
            android:layout_marginLeft="20px"
            />
        <TextView
            android:id="@+id/frag_home_recycler_departure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="28px"
            android:text="重庆渝北"
            android:textColor="#777777"
            android:layout_marginLeft="20px"
            android:layout_weight="1"
            />
        <ImageView
            android:layout_width="24px"
            android:layout_height="24px"
            android:src="@mipmap/tb_3"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="28px"
            android:text="目的地:"
            android:textColor="#777777"
            android:layout_marginLeft="10px"
            />
        <TextView
            android:id="@+id/frag_home_recycler_destination"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="28px"
            android:text="重庆万州"
            android:textColor="#777777"
            android:layout_marginLeft="20px"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#eaeaea"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="30px"
        android:gravity="center_vertical"
        >
        <ImageView
            android:layout_width="24px"
            android:layout_height="24px"
            android:src="@mipmap/tb_4"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="28px"
            android:text="起运时间:"
            android:textColor="#777777"
            android:layout_marginLeft="20px"
            />
        <TextView
            android:id="@+id/frag_home_recycler_start_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="28px"
            android:text="2017-05-06"
            android:textColor="#777777"
            android:layout_marginLeft="20px"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#eaeaea"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="30px"
        android:gravity="center_vertical"
        >
        <ImageView
            android:layout_width="24px"
            android:layout_height="24px"
            android:src="@mipmap/tb_5"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="28px"
            android:text="贸易商:"
            android:textColor="#777777"
            android:layout_marginLeft="20px"
            />
        <TextView
            android:id="@+id/frag_home_recycler_traders"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="28px"
            android:text="重庆进出口贸易公司"
            android:textColor="#777777"
            android:layout_marginLeft="20px"
            android:layout_weight="1"
            />
        <ImageView
            android:id="@+id/frag_home_recycler_traders_phone"
            android:layout_width="30px"
            android:layout_height="30px"
            android:src="@mipmap/tb_6"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#eaeaea"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="30px"
        android:paddingRight="30px"
        android:paddingBottom="20px"
        android:paddingTop="20px"
        >
        <com.rey.material.widget.TextView
            android:id="@+id/frag_home_recycler_start"
            android:layout_width="176px"
            android:layout_height="58px"
            android:textColor="#ffffff"
            android:textSize="26px"
            android:text="起 运"
            android:background="@drawable/order_bg"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            app:rd_enable="true"
            />
        <com.rey.material.widget.TextView
            android:id="@+id/frag_home_recycler_detail"
            android:layout_width="176px"
            android:layout_height="58px"
            android:textColor="#ffffff"
            android:textSize="26px"
            android:text="详  情"
            android:background="@drawable/order_bg"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            app:rd_enable="true"
            android:visibility="gone"
            />
    </RelativeLayout>


</LinearLayout>